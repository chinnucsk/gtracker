%% rotating log and errors
[
   {
      sasl, [
            %% minimise shell error logging
            {sasl_error_logger, false},
            %% the log file directory
            {error_logger_mf_dir,"/var/lib/gtracker_db/app" },
            %% # bytes per logfile
            {error_logger_mf_maxbytes,10485760}, % 10 MB
            %% maximum number of
            {error_logger_mf_maxfiles, 10}
        ]
   },
   {
      gtracker_db,
         [
            {mds_server, [{root_dir, "/var/lib/gtracker_db"}]},
            {mds_logger, [{log_level, debug}, {enable_alarm, true}]},
            {sup_mod,    gtracker_sup},
            {servers,
               [
                  {
                     gtracker_mnesia,
                        [
                           {mds_server, [{working_dir, mnesia}]},
                           {self, [as_track_node, {track_path, "/var/lib/gtracker_db/tracks"}]}
                        ]
                  },
                  {
                     gtracker_alarm,
                        [
                           {self, [{to, "dmitryme@gmail.com"}, {subject, "gTracker: "}]}
                        ]
                  },
                  {
                     gtracker_listener,
                        [
                           {mds_server, [{working_dir, listener}]},
                           {self, [{port, 8888}, calc_speed, {db, global, gtracker_db}]}
                        ]
                  }
               ]
            }
         ]
   }
].
