%% rotating log and errors
[
   {
      sasl, [
            %% minimise shell error logging
            {sasl_error_logger, tty},
            %% the log file directory
            {error_logger_mf_dir,"logs" },
            %% # bytes per logfile
            {error_logger_mf_maxbytes,10485760}, % 10 MB
            %% maximum number of
            {error_logger_mf_maxfiles, 10}
        ]
   },
   {
      gtracker2, [
            {mds_server, [{root_dir, "logs"}]},
            {mds_logger, [{log_level, info}, {enable_alarm, false}]},
            {sup_mod,    gtracker_sup},
            {servers, [
                  {
                     gtracker_metadata,
                     [
                        {mds_server, [{working_dir, metadata}]},
                        {self, [{track_group, track}]}
                     ]
                  },
                  {
                     gtracker_alarm,
                     [
                        {self, [{to, "dmitryme@gmail.com"}, {subject, "gTracker: "}]}
                     ]
                  },
                  {
                     gtracker_listener,
                     [
                        {mds_server, [{working_dir, listener0}]},
                        {self, [{host, "localhost"}, {name, {global, listener0}}, {group, listener}, {port, 8889}, calc_speed, {mt, {global,
                        gtracker_mt}}]}
                     ]
                  },
                  {
                     gtracker_listener,
                     [
                        {mds_server, [{working_dir, listener}]},
                        {self, [{host, "localhost"}, {name, {global, listener}}, {group, listener}, {port, 8888}, is_master, calc_speed, {mt, {global,
                        gtracker_mt}}]}
                     ]
                  },
                  {
                     gtracker_track,
                     [
                        {mds_server, [{working_dir, track}]},
                        {self, [{name, {global, track}}, {group, track}, {mt, {global, gtracker_mt}}]}
                     ]
                  }
               ]
            }
         ]
   }
].
